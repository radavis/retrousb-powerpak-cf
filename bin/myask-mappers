#!/usr/bin/env bash

url="http://forums.nesdev.com/download/file.php?id=5989"

current_path=$(pwd)
assets_dir="$current_path/assets"
mappers_dir="$current_path/build/POWERPAK"
destination_dir="$current_path/build/POWERPAK/myask"
url_filename=$(basename "$url")
filename="Myask_ppak_32_33_48_65_107.zip"

# download (if necessary)
[ ! -f "$assets_dir/$filename" ] && wget "$url" -O "$assets_dir/$filename"

# extract
unzip -q "$assets_dir/$filename" -d "$destination_dir"

# move
find "$destination_dir" -name "*.MAP" -exec mv '{}' "$mappers_dir" \;
